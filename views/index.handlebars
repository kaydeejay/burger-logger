<h1 class="gray-bg">The Burger Diaries</h1>

<div class="burgers-row">
  <div class="not-eaten gray-bg">
    <h2>Burgers I wanna eat</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eaten gray-bg">
    <h2>Burgers I ate</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="add-a-burger gray-bg">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name" placeholder="Burger">
    </div>

    <div class="form-group">
      <label for="devoured">Already Eaten?</label><br>
      <input type="radio" name="devoured" value="1" checked>Eaten<br>
      <input type="radio" name="devoured" value="0"> Want to Eat
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>