<h1>The Burger Diaries</h1>

<div class="not-eaten">
  <h2>Burgers I wanna eat</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="eaten">
  <h2>Burgers I ate</h2>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="add-a-burger">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>

    <div class="form-group">
      <label for="devoured">Already Eaten?</label><br>
      <input type="radio" name="devoured" value="1" checked>Eaten<br>
      <input type="radio" name="devoured" value="0"> Want to Eat
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>